<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="ElasticEditText">
        <!--输入框的提示的文字-->
        <attr name="tipText" format="string"/>
        <!--输入框的提示的内容-->
        <attr name="tipTextColor" format="color"/>
        <!--输入框的提示的大小-->
        <attr name="tipTextSize" format="dimension"/>
        <!--输入框输入的类型，未实现-->
        <attr name="myEditType" format="enum"/>
        <!--输入框的文字-->
        <attr name="myEditText" format="string"/>
        <!--输入框的文字的颜色-->
        <attr name="myEditTextColor" format="color"/>
        <!--输入框的文字的大小-->
        <attr name="myEditTextSize" format="dimension"/>
        <!--没有输入焦点时的下划线的颜色-->
        <attr name="lineColor" format="color"/>
        <!--有焦点的时候的下划线颜色-->
        <attr name="lineChangeColor" format="color"/>
        <!--下划线跳动的速度，从1-10-->
        <attr name="lineSpeed" format="integer"/>
    </declare-styleable>
</resources>
